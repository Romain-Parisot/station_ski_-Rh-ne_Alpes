{% extends 'base.html.twig' %}

{% block body %}

    {% include 'partial/header.html.twig' %}

    <a href="{{ path('app_event') }}">Retour</a>

    <section class="event_single" >
        <img src=../uploads/event/{{ event.image}} alt="{{ event.title }}">
        <div class="content">
            <h1>{{ event.title }} </h1>

            <p>{{ event.description | striptags }}</p>
            <p class="event_date">Date : {{ event.date|date('d/m/Y') }}</p>
            <p>
                <a href="{{ path('app_station', {'id': event.station.id}) }}">
                    Lieu : {{ event.station.name }}
                </a>
            </p>
        </div>
    </section>

    {% include 'partial/footer.html.twig' %}

{% endblock %}