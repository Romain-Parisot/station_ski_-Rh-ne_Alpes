{% extends 'base.html.twig' %}

{% block body %}

    {% include 'partial/header.html.twig' %}

    <a href="{{ path('app_blog') }}">Retour</a>

    <section class="blog_single" >
        <img src="../uploads/blog/{{ blog.image }}" alt="{{ blog.title }}">
        <div class="content">
            <h1>{{ blog.title }} </h1>

            <p>{{ blog.description }}</p>
            <p class="blog_lieu">
                <a href="{{ path('app_station', {'id': blog.station.id}) }}">
                    Lieu : {{ blog.station.name }}
                </a>
            </p>
        </div>
    </section>

    {% include 'partial/footer.html.twig' %}

{% endblock %}