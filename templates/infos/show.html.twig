{% extends 'base.html.twig' %}

{% block body %}

    {% include 'partial/header.html.twig' %}

    <a href="{{ path('app_infos') }}">Retour</a>

    <section class="info_single" >
        <img src="{{ info.image }}" alt="{{ info.title }}">
        <div class="content">
            <h1>{{ info.title }} </h1>

            <p>{{ info.description }}</p>
            <p class="info_lieu">
                <a href="{{ path('app_station', {'id': info.station.id}) }}">
                    Lieu : {{ info.station.name }}
                </a>
            </p>
        </div>
    </section>

    {% include 'partial/footer.html.twig' %}

{% endblock %}