{% extends 'base.html.twig' %}

{% block title %}Hello InfosController!{% endblock %}

{% block body %}

    {% include 'partial/header.html.twig' %}

    <ul>
        {% for info in infos %}
            <div class="info_info">
                <img src="{{ info.image }}" alt="{{ info.title }}">
                <li>
                    <h2>{{ info.title }}</h2>
                    <p>{{ info.description }}</p>
                    <p>Lieu: {{ info.station.name }}</p>
                </li>
            </div>
        {% endfor %}
    </ul>

    {% include 'partial/footer.html.twig' %}

{% endblock %}
